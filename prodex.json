{
    "$schema": "https://raw.githubusercontent.com/emxhive/prodex/main/schema/prodex.schema.json",
    "version": 3.1,
    "output": {
        "dir": "prodex",
        "versioned": true,
        "prefix": "combined",
        "format": "md"
    },
    "entry": {},
    "resolve": {
        "include": [
            "**/app.tsx",
            "**/*.d.ts"
        ],
        "aliases": {
            "@": "resources/js",
            "@inertiajs": "resources/js/types"
        },
        "exclude": [
            "@shadcn/**",
            "**/components/ui/**",
            "@inertiajs/**"
        ],
        "depth": 10,
        "limit": 200
    },
    "shortcuts": {
        "front": {
            "prefix": "shop-front",
            "files": [
                "**/pages/shop/**"
            ],
            "exclude": [
                "**/layouts/**"
            ]
        },
        "check": {
            "prefix": "checkout",
            "files": [
                "**/checkout.tsx"
            ],
            "exclude": [
                "**/layouts/**"
            ]
        }
    }
}
